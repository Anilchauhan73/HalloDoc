@model HalloDocServices.ViewModels.Patienlogin;

@{
    Layout = "";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Patient Login Page</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/Patient_login.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
</head>

<body>
    <div class="header  d-flex">
        <img src="~/images/Fig56. Patient site 1.png" alt="" class="img-fluid mx-auto d-block">
        <i class="bi bi-moon-fill moon-icon" id="toggleTheme"></i>

    </div>
    <form methode = "post" asp-action="Patient_login" asp-controller="Home">
        <div class="center-content ">

            <div class=" main-content">
                <i class="lt text-primary back-btn"><a asp-controller="Home" asp-action="Index" class="text-decoration-none">&lt;Back</a></i>
                <h2 class="text-center text-login ">Login to your account</h2>

                <div>
                    <div class="form-floating mb-2">
                        <input asp-for="Email" type="email" class="form-control my-4" id="floatingInput" placeholder="name@example.com" required>
                        <label for="Email">Email </label>
                    </div>

                    <div class="form-floating mb-2">
                        <input asp-for="Passwordhash" type="password" class="form-control my-4" id="floatingPassword" placeholder="Password" required>
                        <label for="PasswordHash">Password</label>
                    </div>
                </div>
                <div class="d-grid mb-5">
                    <button class="btn btn-primary login" type="submit">Log In </button>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>


                </div>

                <div class="text-align-center justify-content-center d-flex">
                    <a asp-action="Forget_pass" asp-controller="Home" class="text-primary text-decoration-none "> Forgot Password ? </a>
                </div>
            </div>
        </div>
    </form>

    <div class=" footer">
        <p class="text-muted text-center">Term and conditions | privacy policy </p>
    </div>

</body>

<script>
    togglePassword.addEventListener("click", function () {

        const type = PasswordHash.getAttribute("type") === "password" ? "text" : "password";
        PasswordHash.setAttribute("type", type);

        this.classList.toggle("bi-eye");
    });
</script>

</html>
